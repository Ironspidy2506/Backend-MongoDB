<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Read Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 p-10">
    <a class="text-3xl tracking-tighter mb-3 text-blue-500" href="/">Back to Home</a>
    <h1 class="text-3xl tracking-tighter mb-3 text-white">All Users</h1>

    <% if (users.length > 0) { %>
    <div class="users flex gap-3 flex-wrap">
      <% users.forEach(function(user) { %>
      <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
        <h1 class="text-xl mt-3 tracking-tighter text-white"><%= user.name %></h1>
        <h3 class="text-xl mt-3 tracking-tighter text-white"><%= user.username %></h3>
        <h5 class="text-zinc-500"><%= user.email %></h5>
        <div class="flex gap-3">
          <a class="text-zinc-500" href="/edit/<%= user._id %>">Edit User</a>
          <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
        </div>
      </div>
      <% }) %>
    </div>
    <% } else { %>
    <p class="text-white">No users yet</p>
    <% } %>
  </body>
</html>
